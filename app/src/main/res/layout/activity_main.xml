<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivCodePath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_codepath" />

    <ImageView
        android:id="@+id/ivAndroid"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCodePath"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toEndOf="@+id/ivCodePath"
        app:layout_constraintTop_toTopOf="@+id/ivCodePath"
        app:srcCompat="@drawable/ic_android" />

    <ImageView
        android:id="@+id/iv2019"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="128dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivCodePath"
        app:layout_constraintDimensionRatio="2.2:1"
        app:layout_constraintEnd_toStartOf="@+id/ivQueensCollege"
        app:layout_constraintStart_toEndOf="@+id/ivAndroid"
        app:layout_constraintTop_toTopOf="@+id/ivCodePath"
        app:srcCompat="@drawable/ic_2019" />

    <ImageView
        android:id="@+id/ivQueensCollege"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="@+id/ivCodePath"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivCodePath"
        app:srcCompat="@mipmap/ic_queens_college" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rvAttendance"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivCodePath" />

</android.support.constraint.ConstraintLayout>